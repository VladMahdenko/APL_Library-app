<div class="table-responsive rounded mb-4">
  <table class="table table-striped mb-0">
    <thead class="bg-primary">
    <tr>
      <th>Avatar</th>
      <th>Last name</th>
      <th>First name</th>
      <th>Patronymic</th>
      <th>Birth date</th>
      <th>Email</th>
    </tr>
    </thead>
    <tr>
      <%if user.avatar.attached? %>
        <td><%=image_tag user.avatar, style: "width:50px;height:50px;" %></td>
      <%else %>
        <td>Avatar is missing</td>
      <%end %>
      <td><%= user.last_name %></td>
      <td><%= user.first_name %></td>
      <td><%= user.patronymic %></td>
      <td><%= user.birth_date%></td>
      <td><%= user.email %></td>
    </tr>
  </table>
</div>