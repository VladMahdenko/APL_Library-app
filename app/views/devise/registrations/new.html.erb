<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://img.freepik.com/free-vector/people-library-flat-vector-illustration_74855-6607.jpghttps://img.freepik.com/free-vector/people-library-flat-vector-illustration_74855-6607.jpg?w=1060&t=st=1681233831~exp=1681234431~hmac=a99e7face0f9b7220e748a0c29e737bcfc521bdcad7adccc263f97b12e4cfab8"
             class="img-fluid" alt="Library image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
            <div class="col-md-4 mb-4">
              <div class="form-outline">
                <%= f.text_field :last_name, autofocus: true, class: "form-control form-control-lg", placeholder: "Last Name"%>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="form-outline">
                <%= f.text_field :first_name, autofocus: true, class: "form-control form-control-lg", placeholder: "First Name"%>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="form-outline">
                <%= f.text_field :patronymic, autofocus: true, class: "form-control form-control-lg", placeholder: "Patronymic"%>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-4">
              <div class="form-outline">
                <%= f.label :birth_date, class: "form-label"%><br />
                <%= f.date_field :birth_date, autofocus: true,  class: "form-control form-control-lg"%>
              </div>
            </div>
          </div>

          <div class="form-outline mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Password (#{@minimum_password_length} characters minimum)"%>
          </div>

          <div class="form-outline mb-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Repeat password"%>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block w-100"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
