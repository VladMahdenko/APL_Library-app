<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://img.freepik.com/free-vector/people-library-flat-vector-illustration_74855-6607.jpghttps://img.freepik.com/free-vector/people-library-flat-vector-illustration_74855-6607.jpg?w=1060&t=st=1681233831~exp=1681234431~hmac=a99e7face0f9b7220e748a0c29e737bcfc521bdcad7adccc263f97b12e4cfab8"
             class="img-fluid" alt="Library image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-outline mb-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email"%>
            </div>

            <div class="form-outline mb-4">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Password" %>
            </div>

            <div class="d-flex justify-content-around align-items-center mb-4">
              <% if devise_mapping.rememberable? %>
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input", id: "check"%>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                <% end %>
              <% end %>
            </div>
            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block w-100"%>
            </div>
          <% end %>
        <div class="divider my-4 ">
        </div>
        <div class="d-flex justify-content-around align-items-center mb-4">
          <p class="text-center fw-bold mx-3 mb-0 text-muted">Not registered?</p>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary btn-lg btn-block w-100"%><br />
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>